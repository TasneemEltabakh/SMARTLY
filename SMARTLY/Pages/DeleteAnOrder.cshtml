@page
@model SMARTLY.Pages.DeleteAnOrderModel
@{
	Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}

<section id="hero2" class="d-flex align-items-center">
	<div class="container position-relative" data-aos="fade-up" data-aos-delay="500">
		<h1>Placed orders</h1>

	</div>
</section>

<section style="min-height: 500px; height:auto">

<h1>Delete Page</h1>
<p>Are you sure you want to delete this?</p>
<form method="post">
	<div class="form-group" >
		<button type="submit" class="btn btn-danger" name="continue">Continue</button>
	</div>
	<input hidden asp-for="@Model.ordercode "/>
	<a asp-page="/All_Orders" class="btn btn-secondary">Cancel</a>
</form>
</section>