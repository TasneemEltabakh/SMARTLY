<section  class="d-flex align-items-center ftco-section">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-6 text-center mb-5">
			  <h2>SMARTLY</h2>
			</div>
		</div>

		<div class="row justify-content-center">
			<div class="col-md-6 col-lg-4">
				<div class="login-wrap p-0">

					<form method="post">
						
						
						<div class="form-group">
							<label style="color:DarkOrange;">Bundle Name</label><br />
							<input asp-for="@Model.bundle.Name" type="text" class="form-control" placeholder="Name" required>
								<span asp-validation-for="@Model.bundle.Name"></span>
						</div>

						<div class="form-group">
							<label style="color:DarkOrange;">Bundle price</label><br />
							<input asp-for="@Model.bundle.price" type="text" class="form-control" placeholder="Price" required>
								<span asp-validation-for="@Model.bundle.price"></span>
						</div>

						<div class="form-group">
							<label style="color:DarkOrange;">Bundle level</label><br />
							<input asp-for="@Model.bundle.level" type="text" class="form-control" placeholder="level" >
								<span asp-validation-for="@Model.bundle.level"></span>
						</div>

						<div class="form-group">
							<label style="color:DarkOrange;">Bundle Description</label><br />
							<input  asp-for="@Model.bundle.Description" type="text" class="form-control" placeholder="Description" >
								<span asp-validation-for="@Model.bundle.Description"></span>
						</div>

						
						  @if (Model.msg != "free")
                        {
                            <p style="color: red"> @Model.msg</p>
                        }

						<div class="form-group">
							<button type="submit" class="form-control btn primary-btn1" asp-page="/Bundle_Out_Admin">Add</button>
							<center><a href="/Bundle_Item_Admin" class="text-center" style="color:DarkOrange;"> Return Back</a></center>
								<br /><br /><br /><br />
						</div>
						
						
					</form>
					
				</div>
			</div>
		</div>
	</div>
</section>
