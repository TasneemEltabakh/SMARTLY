@page
@model SMARTLY.Pages.ForgetPasswordModel
@{
}


<section id="hero" class="d-flex align-items-center ftco-section">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-6 text-center mb-5">
				<br />
				<br />
				<br />
				<a href="/Index" class="logo"><img src="assets/img/V1.png.png" height="200" width="200" alt="" class="img-fluid"></a>

			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-md-6 col-lg-4">
				<div class="login-wrap p-0">

					<form method="post" class="signin-form">
						<div class="form-group">
							<input asp-for="@Model.user.email" type="text" class="form-control" placeholder="Email" required>
						</div>
						@if (Model.message != "free")
						{
							<p style="color: red"> @Model.message</p>
						}
						<div class="form-group">
							<button type="submit" class="form-control btn primary-btn1">Send Code</button>
						</div>
					</form>

				</div>
			</div>
		</div>
	</div>
</section>