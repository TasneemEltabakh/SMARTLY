@page
@model SMARTLY.Pages.ProfileModel
@{
	Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}
<style>
    header {
        background-image: url('assets/img/homeView.jpg');
        "background-color: black;
    }
</style>
<br />
<br />
<br />
<br />
<br />


<section style="background-color: black;">
    <br />
    <br />
   
  <div class="container py-5">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="/IndexAdmin">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">User Profile</li>
          </ol>
        </nav>
      </div>
    </div>
        <br />
        <br />
        <div class="row d-flex align-items-center justify-content-center">
      <div class="col-lg-5">
        <div class="card mb-6">
          <div class="card-body text-center">
                        <div class="d-flex justify-content-center align-items-center">
                            @if (string.IsNullOrEmpty(Convert.ToString(Model.userData.Rows[0][3])))
                            {
                                <img href="#" src="assets\img\noImage.png" alt="avatar" class="rounded-circle img-fluid" style="width: 200px;" />

                            }else{
                                byte[] bytes = (byte[])Model.userData.Rows[0][3];
                                var base64 = Convert.ToBase64String(bytes);
                                var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
                                <img href="#" src="@imgsrc" alt="avatar" class="rounded-circle img-fluid" />
                                <!--<a href="#" class="ms-2" data-bs-toggle="modal" data-bs-target="#editProfilePhotoModal"><i class="bi bi-pencil-square"></i></a>-->
                            }
                        </div>
                        <form method="post" class="signin-form" enctype="multipart/form-data">
                                <input asp-for="@Model.Image123" type="file" id="files" class="bi bi-pencil-square">
                                <button asp-page-handler="Add" type="submit">change</button>
                        </form>
            <h5 class="my-3">Muhammed Abusharaf</h5>
            <p class="text-muted mb-1"> Admin </p>
            <div class="d-flex justify-content-center mb-2">
                <br/>
                <br/>
                            <br />
                            <br />
                 <form method="post" asp-page="/Profile">
                               
                    @if (Model.isedit == 0) {
                    <button  type="submit" class="btn btn-primary">
                        Turn to portfolio
                    </button>
                    }
                  else 
                    {
                        <button type="submit" class="btn btn-primary">
                        Turn to store
                    </button>
                    }
                              
                  </form>
            </div>
          </div>
        </div>
      </div>
     
      <div class="col-lg-5">
        <div class="card mb-6">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Full Name</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">Muhammed Abu Sharaf</p>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">username</p>
              </div>
              <div class="col-sm-6">
                <p class="text-muted mb-0">@Model.userData.Rows[0][0]</p>
              </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0">Password</p>
              </div>
              <div class="col-sm-6">
                <p class="text-muted mb-0"  type="password">@Model.passwordencryped</p>
              </div>
               <div class="col-sm-3">
                                    <a asp-page="/Checkdata"/> Update </a>
                                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<br />
<br />
<br />
<br />
        
</section>
