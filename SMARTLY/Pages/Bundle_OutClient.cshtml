@page
@model SMARTLY.Pages.Bundle_OutClientModel
@{
	Layout = "/Pages/Shared/_LayoutClient.cshtml";
}
<section id="hero2" class="d-flex align-items-center">
    <div class="container position-relative" data-aos="fade-up" data-aos-delay="500">
        <h1>OUR BUNDLES</h1>

    </div>
</section>

<section id="pricing" class="pricing">
    <div class="container">

        <div class="section-title">

            <br />
            <br />



            <div class="row">

                @for (int i = 0; i < Model.dt.Rows.Count; i++)
                {
                    <div class="col-lg-4 col-md-6" data-aos="zoom-in" data-aos-delay="150">
                        <div class="box">
                            <h3><a asp-page="/Bundle_ItemClient" asp-route-id="@Model.dt.Rows[i][0]">@Model.dt.Rows[i][4]</a></h3>

                            <img src="@Model.dt.Rows[i][5]" alt="Basic Bundle" width="200" Hight=" 200">

                            <h4><sup>EGB</sup><a asp-page="/Bundle_ItemClient" asp-route-id="@Model.dt.Rows[i][0]">@Model.dt.Rows[i][1]</a></h4>
                            <ul>
                            </ul>
                            @if(Model.ThisState==0)
                            {

                         
                            <div class="btn-wrap">
                                   @if(Model.type==3){
										<a asp-page="/CartClient" asp-page-handler="Add" class="add-to-cart-btn" asp-route-id="@Model.dt.Rows[i][0]" asp-route-type="2">Add to cart</a>
									}
									else
									{
											<a asp-page="/Cart" asp-page-handler="Add" class="add-to-cart-btn" asp-route-id="@Model.dt.Rows[i][0]" asp-route-type="2">Add to cart</a>
									}
                            </div>
                            }
                            else
                            {
                                <div class="btn-wrap">
                                    <a asp-page="/Bundle_ItemClient" asp-route-id="@Model.dt.Rows[i][0]">View</a>
                                </div>
                            }
                        </div>
                    </div>
                }

            </div>

        </div>

</section><!-- End Pricing Section -->
