		<nav id="navbar" class="navbar order-last order-lg-0">


			<ul>
				<li><a class="nav-link scrollto active" href="/Index">Home</a></li>
				<li><a class="nav-link scrollto" asp-page="/Products_Main">Product</a></li>
				<li class="dropdown">
					<a asp-page="/Bundle_Out"><span>Bundles</span> <i class="bi bi-chevron-down"></i></a>
					<ul>
						<li><a href="/Bundle_Item">Basic</a></li>
						<li><a href="/Bundle_Out_Admin">Intermediate</a></li>
