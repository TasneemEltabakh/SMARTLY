@page
@model SMARTLY.Pages.Product_internal_AdminModel
@{
	  if(Model.type==1)
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
    if(Model.type==4)
     Layout = "/Pages/Shared/_LayoutManager.cshtml";
}

<section id="hero2" class="d-flex align-items-center">
	<div class="container position-relative" data-aos="fade-up" data-aos-delay="500">
		<h1>OUR PRODUCTS</h1>
		<div class="header-search">
			@*<form>
				<input class="input-select"></input>
				<button class="search-btn">Search</button>
			</form>*@
		</div>
</section>


<main id="main">

	<!-- ======= Breadcrumbs ======= -->
	<section id="breadcrumbs" class="breadcrumbs">
		<div class="container">

			<div class="d-flex justify-content-between align-items-center">
				<h2>Product Details</h2>
				<ol>
					<li><a asp-page="/IndexClient">Home</a></li>
					<li>Product Details</li>
				</ol>
			</div>

		</div>
	</section><!-- End Breadcrumbs -->
	<!-- ======= Portfolio Details Section ======= -->
	<section id="portfolio-details" class="portfolio-details">
		<div class="container">

			<div class="row gy-4">

				<div class="col-lg-8">
					<div class="portfolio-details-slider swiper">
						@if(Model.ImgsTable.Rows.Count==1){
							<div class=" align-items-center" style="padding-left: 170px;">
								@for (int i = 0; i < Model.ImgsTable.Rows.Count; i++)
								{
									<div class="swiper-slide">
										@{
											byte[] bytes = (byte[])Model.ImgsTable.Rows[i][1];
											var base64 = Convert.ToBase64String(bytes);
											var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
										}
										<img src="@imgsrc" alt="" style="width: 500px; height: 500px; object-fit: fill;" />
									</div>
								}

							</div>
						}
						else
						{
							<div class="swiper-wrapper align-items-center" style="padding-left: 170px;">
								@for (int i = 0; i < Model.ImgsTable.Rows.Count; i++)
								{
									<div class="swiper-slide">
										@{
											byte[] bytes = (byte[])Model.ImgsTable.Rows[i][1];
											var base64 = Convert.ToBase64String(bytes);
											var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
										}
										<img src="@imgsrc" alt="" style="width: 500px; height: 500px; object-fit: fill;" />
									</div>
								}

							</div>
							<div class="swiper-pagination"></div>
						}
					</div>
				</div>

				<div class="col-lg-4">
					<div class="portfolio-info">
						<h3>Product Information</h3>
						<h2 class="product-name" style="color:#FFC733">@Model.dt.Rows[0][1]</h2>
						<div>
							<div class="product-rating" style="color:#FFC733">
								@for (int i = 0; i < Model.rating; i++)
								{
									<i class="fa fa-star"></i>
								}
								@for (int i = 0; i < (5 - Model.rating); i++)
								{
									<i class="fa fa-star-o"></i>
								}
								<a class="review-link" href="#" style="color:black">@Model.CountFeedBack Review(s)</a>
							</div>
						</div>
						<div>
							<h3 class="product-price">$ @Model.dt.Rows[0][9] <del class="product-old-price" style="color:#FFC733">$ @Model.dt.Rows[0][2]</del></h3>
						</div>
						<ul>
							<li><strong>Category</strong>: @Model.Categorietype</li>
							<li><strong>Colour</strong>: @Model.dt.Rows[0][4]</li>
							<li><strong>Quantity</strong>: @Model.dt.Rows[0][3]</li>
							@if (Convert.ToInt32(Model.dt.Rows[0][5]) != 0)
							{
								<li><strong>Price before Sale</strong>: @Model.dt.Rows[0][2]</li>
								<li><strong>Price After Sale</strong>: @Model.dt.Rows[0][9]</li>
							}
							else
							{
								<li><strong>Price</strong>: @Model.dt.Rows[0][9]</li>
							}
							<li><strong>Price In Bundle</strong>: @Model.dt.Rows[0][11]</li>
						</ul>
						<div class="add-to-cart">
							<ul class="product-btns">
								<li>
									<a asp-page="/Edit_Product" asp-route-id="@Model.dt.Rows[0][0]" class="Admin_Button" style=" height:60px;width:150px;">Edit</a>
									<a asp-page="/DeleteProduct" asp-route-id="@Model.dt.Rows[0][0]" class="Admin_Button" style=" height:60px;width:150px;">Delete</a>
								</li>
							</ul>
						</div>
						
					</div>
					<div class="portfolio-description">
						<p>
							@Model.dt.Rows[0][7]
						</p>
					</div>
					<br />
					

				</div>

			</div>

		</div>











		<div class="col-md-12" style="margin: 0;width: 100%; padding: 50px;">
			<div id="product-tab">
				<!-- product tab nav -->
				<ul class="tab-nav">
					<li><a data-toggle="tab" href="#tab3">Reviews @Model.RateTable.Rows.Count</a></li>
				</ul>

				<div class="row" data-aos="fade-up">
					<!-- Rating -->
					<div class="col-md-3">
						<div id="rating">
							<div class="rating-avg">
								<span>@Model.rating</span>
								<div class="rating-stars">
									@for (int i = 0; i < Model.rating; i++)
									{
										<i class="fa fa-star"></i>
									}
									@for (int i = 0; i < 5 - Model.rating; i++)
									{
										<i class="fa fa-star-o"></i>
									}
								</div>
							</div>
							<ul class="rating">
								@for (int i = 0; i < Model.RateTable.Rows.Count; i++)
								{
									<li>
										<div class="rating-stars">
											@for (int j = 0; j < (int)Model.RateTable.Rows[i][2]; j++)
											{
												<i class="fa fa-star"></i>
											}
											@for (int j = 0; j < 5 - (int)Model.RateTable.Rows[i][2]; j++)
											{
												<i class="fa fa-star-o"></i>
											}
										</div>
										<div class="rating-progress">
											<div style="width: @Model.rating%;"></div>
										</div>
									</li>
								}

							</ul>
						</div>

					</div>
					<!-- /Rating -->
					<!-- Reviews -->
					<div class="col-md-4">
						<div id="reviews">
							<ul class="reviews">
								@for (int i = 0; i < Model.RateTable.Rows.Count; i++)
								{
									<li>
										<div class="review-heading">
											<h5 class="name">@Model.RateTable.Rows[i][0]</h5>
											<div class="review-rating">
												@for (int j = 0; j < (int)Model.RateTable.Rows[i][2]; j++)
												{
													<i class="fa fa-star"></i>
												}
												@for (int j = 0; j < 5 - (int)Model.RateTable.Rows[i][2]; j++)
												{
													<i class="fa fa-star-o empty"></i>
												}
											</div>

										</div>
										<div class="review-body">
											@if ((int)Model.RateTable.Rows[i][2] == 0 || (int)Model.RateTable.Rows[i][2] == 1)
											{
												<p>Good!</p>
											}
											else if ((int)Model.RateTable.Rows[i][2] == 2 || (int)Model.RateTable.Rows[i][2] == 3)
											{
												<p>Nice!</p>
											}
											else if ((int)Model.RateTable.Rows[i][2] == 4)
											{
												<p>Great!</p>
											}
											else if ((int)Model.RateTable.Rows[i][2] == 5)
											{
												<p>Amazing!</p>
											}

										</div>
									</li>
								}
							</ul>
							<br />
							<br />

						</div>
					</div>
					<!-- /Reviews -->
					<!-- Review Form -->
					<!-- /Review Form -->
				</div>

			</div>
		</div>
		<!-- /product tab -->
		<!-- /Product details -->
	</section><!-- End Portfolio Details Section -->

</main><!-- End #main -->

<br />