






@page
@model SMARTLY.Pages.Products_Main_AgencyModel
@{
	Layout = "/Pages/Shared/_LayoutAgency.cshtml";
}
//

<section id="hero2" class="d-flex align-items-center">
	<div class="container position-relative" data-aos="fade-up" data-aos-delay="500">
		<h1>OUR PRODUCTS</h1>
		<div class="header-search">
			<form method="post" id="SearchForm">
				<input class="input-select" id="SearchQuery" name="searchQuery" placeholder="   Search for Products "></input>
				<button asp-page-handler="search" class="search-btn">Search</button>
			</form>
		</div>
</section>
<br />





<!-- products Category -->
<div class="product-section mt-150 mb-150">
	<div class="container" data-aos="fade-up">

		<div class="row">
			<div class="col-md-12">
				<div class="product-filters">
					<ul>
						<li data-filter="*" class="active">All</li>
						@for (int i = 0; i< Model.CategoriesTablex.Rows.Count; i++)
						{
							<li data-filter=".berry">@Model.CategoriesTablex.Rows[i][1]</li>
						}
					</ul>
				</div>
			</div>
		</div>



		<div class="section">
			<!-- container -->
			<div class="container" data-aos="fade-up">

				<!-- store products -->
				<div class="row">
					<!-- product -->
					@for (int i = 0; i< Model.ProductsTablex.Rows.Count; i++)
					{
						<div class="col-md-4 col-xs-6">
							<div class="product">
								<div class="product-img">
									<img class="circle" src="@Model.ProductsTablex.Rows[i][8]" alt="Basic Bundle" width="200" Hight=" 200">

									<div class="product-label">

										@if (Model.returnSale((double)Model.ProductsTablex.Rows[i][5]) != 0)
										{
											<span class="sale">@Model.ProductsTablex.Rows[i][5] %</span>
										}

									</div>
								</div>
								<div class="product-body">
									<p class="product-category">@Model.returnCategory((int)Model.ProductsTablex.Rows[i][6])</p>
									<h3 class="product-name"><a href="/Product_internal">@Model.ProductsTablex.Rows[i][1]</a></h3>


									@if (Model.returnSale((double)Model.ProductsTablex.Rows[i][5]) != 0)
									{
										<h4 class="product-price">
											EGB @Model.price_after_sale((double)Model.ProductsTablex.Rows[i][2], (double)Model.ProductsTablex.Rows[i][5])
											<del class="product-old-price"> EGB @Model.ProductsTablex.Rows[i][2]  </del>
										</h4>
									}
									@if (Model.returnSale((double)Model.ProductsTablex.Rows[i][5]) == 0)
									{
										<h4 class="product-price">
											EGB @Model.ProductsTablex.Rows[i][2]
										</h4>
									}


									<div class="product-rating">
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
										<i class="fa fa-star"></i>
									</div>

									<div class="product-btns">


										<a asp-page="/Products_internal" class="quick-view" asp-route-id="@Model.ProductsTablex.Rows[i][0]"><i class="fa fa-eye"></i><span class="tooltipp"></span></a>

									</div>


								</div>

								<div class="add-to-cart">
									
									<a href="/Products_Internal_Agency" class="Admin_Button">View</a>

								</div>

							</div>
							<br />
							<br />
							<br />

						</div>
					}
					<!-- /product -->


					<br />
					<br />


				</div>
				<!-- /product -->

			</div>
			<!-- /STORE -->
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>
<!-- /SECTION -->
