@page
@model SMARTLY.Pages.DeleteCategoryModel
@{
	Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}

<section id="hero2" class="d-flex align-items-center">
	<div class="container position-relative" data-aos="fade-up" data-aos-delay="500">
		<h1>Delete Categories</h1>

	</div>
</section>
<br /><br /><br /><br />
<section style="min-height: 500px; height:auto">
<div class=" text-center">
<h1>Delete Page</h1>
	<h5 class="instructions">
		We kindly advise you to carefully consider the implications of deleting this category since it will result in the removal of all products that fall within it. </br>
		However, please note that any orders placed for these products will not be affected </br>
	</h5>

<p>Are you sure you want to delete this?</p>

<form method="post" >
	<div class="form-group" >
		<button type="submit" class="btn btn-danger" name="continue ">Continue</button>
	</div>
	
	<a asp-page="/Products_Main_Admin" class="btn btn-secondary">Cancel</a>
</form>
</div>
<br /><br /><br />
</section>