@page
@model SMARTLY.Pages.Product_internalModel
@{
	
}
<section id="hero2" class="d-flex align-items-center">
	<div class="container position-relative" data-aos="fade-up" data-aos-delay="500">
		<h1>OUR PRODUCTS</h1>
		<div class="header-search">
			@*<form>
				<input class="input-select"></input>
				<button class="search-btn">Search</button>
			</form>*@
		</div>
</section>


<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>Product Details</h2>
                <ol>
                    <li><a href="index.html">Home</a></li>
                    <li>Product Details</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Portfolio Details Section ======= -->
    <section id="portfolio-details" class="portfolio-details">
        <div class="container">

            <div class="row gy-4">

                <div class="col-lg-8">
                    <div class="portfolio-details-slider swiper">
						<div class="swiper-wrapper align-items-center" style="padding-left: 170px;">
                            @for (int i = 0; i < Model.ImgsTable.Rows.Count; i++)
                            {
                                <div class="swiper-slide">
                                    <img src="@Model.ImgsTable.Rows[i][1]" alt=""  style="width: 500px; height: 500px; object-fit: fill;">
                                </div>
                            }
                            
                        </div>
                        <div class="swiper-pagination"></div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="portfolio-info">
                        <h3>Product Information</h3>
                        <ul>
                            <li><strong>Category</strong>: @Model.Categorietype</li>
                            <li><strong>Colour</strong>: @Model.dt.Rows[0][4]</li>
                            <li><strong>Quantity</strong>: @Model.dt.Rows[0][3]</li>
                            <li><strong>Discription</strong>: @Model.dt.Rows[0][7]</li>
                            <li><strong>Price After Sale</strong>: @Model.dt.Rows[0][9]</li>
                        </ul>
                        @if (Model.ThisState == 0)
                        {
                            <div class="add-to-cart">
                                <ul class="product-btns">
                                    <a asp-page="/CartClient" asp-page-handler="Add" class="add-to-cart-btn" asp-route-id="@Model.dt.Rows[0][0]">Add to cart</a>
                                </ul>
                            </div>
                        }
                    </div>
                    <div class="portfolio-description">
                        <p>
                            Autem ipsum nam porro corporis rerum. Quis eos dolorem eos itaque inventore commodi labore quia quia. Exercitationem repudiandae officiis neque suscipit non officia eaque itaque enim. Voluptatem officia accusantium nesciunt est omnis tempora consectetur dignissimos. Sequi nulla at esse enim cum deserunt eius.
                        </p>
                    </div>
                </div>

            </div>

        </div>











		<div class="col-md-12" style="margin: 0;width: 100%; padding: 50px;">
			<div id="product-tab">
				<!-- product tab nav -->
				<ul class="tab-nav">
					<li><a data-toggle="tab" href="#tab3">Reviews @Model.RateTable.Rows.Count</a></li>
				</ul>

				<div class="row" data-aos="fade-up">
					<!-- Rating -->
					<div class="col-md-3">
						<div id="rating">
							<div class="rating-avg">
								<span>@Model.rating</span>
								<div class="rating-stars">
									@for (int i = 0; i < Model.rating; i++)
									{
										<i class="fa fa-star"></i>
									}
									@for (int i = 0; i < 5 - Model.rating; i++)
									{
										<i class="fa fa-star-o"></i>
									}
								</div>
							</div>
							<ul class="rating">
								@for (int i = 0; i < Model.RateTable.Rows.Count; i++)
								{
									<li>
										<div class="rating-stars">
											@for (int j = 0; j < (int)Model.RateTable.Rows[i][2]; j++)
											{
												<i class="fa fa-star"></i>
											}
											@for (int j = 0; j < 5 - (int)Model.RateTable.Rows[i][2]; j++)
											{
												<i class="fa fa-star-o"></i>
											}
										</div>
										<div class="rating-progress">
											<div style="width: @Model.rating%;"></div>
										</div>
									</li>
								}

							</ul>
						</div>
					</div>
					<!-- /Rating -->
					<!-- Reviews -->
					<div class="col-md-4">
						<div id="reviews">
							<ul class="reviews">
								@for (int i = 0; i < Model.RateTable.Rows.Count; i++)
								{
									<li>
										<div class="review-heading">
											<h5 class="name">@Model.RateTable.Rows[i][0]</h5>
											<div class="review-rating">
												@for (int j = 0; j < (int)Model.RateTable.Rows[i][2]; j++)
												{
													<i class="fa fa-star"></i>
												}
												@for (int j = 0; j < 5 - (int)Model.RateTable.Rows[i][2]; j++)
												{
													<i class="fa fa-star-o empty"></i>
												}
											</div>

										</div>
										<div class="review-body">
											@if ((int)Model.RateTable.Rows[i][2] == 0 || (int)Model.RateTable.Rows[i][2] == 1)
											{
												<p>Good!</p>
											}
											else if ((int)Model.RateTable.Rows[i][2] == 2 || (int)Model.RateTable.Rows[i][2] == 3)
											{
												<p>Nice!</p>
											}
											else if ((int)Model.RateTable.Rows[i][2] == 4)
											{
												<p>Great!</p>
											}
											else if ((int)Model.RateTable.Rows[i][2] == 5)
											{
												<p>Amazing!</p>
											}

										</div>
									</li>
								}
							</ul>
							<br />
							<br />

						</div>
					</div>
					<!-- /Reviews -->
					<!-- Review Form -->
					<div class="col-md-3" style="margin: 0;width: 40%; padding: 60px;">
						<h5>Submit your review</h5>
						<br />
						<form class="review-form">
							<input class="input" type="text" placeholder="Your Name">
							<input class="input" type="email" placeholder="Your Email">
							<textarea class="input" placeholder="Your Review"></textarea>
							<div class="input-rating">
								<span>Your Rating: </span>
								<div class="stars">
									<input id="star5" name="rating" value="5" type="radio"><label for="star5"></label>
									<input id="star4" name="rating" value="4" type="radio"><label for="star4"></label>
									<input id="star3" name="rating" value="3" type="radio"><label for="star3"></label>
									<input id="star2" name="rating" value="2" type="radio"><label for="star2"></label>
									<input id="star1" name="rating" value="1" type="radio"><label for="star1"></label>
								</div>
							</div>
							<button class="primary-btn1">Submit</button>
						</form>
					</div>

					<!-- /Review Form -->
				</div>

			</div>
		</div>
		<!-- /product tab -->
		<!-- /Product details -->
    </section><!-- End Portfolio Details Section -->

</main><!-- End #main -->

