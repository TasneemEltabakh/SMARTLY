                        <div class="footer-info">

                            <p>
                                
                               
                              <a href="mailto:@(Model.dt.Rows[i][1])">Contact</a><br>

                            </p>

                        </div>

                    </td>
                    <td>


                        <div class="footer-info">

                            <p>


                                <a asp-page="/DeleteContact" asp-route-email="@Model.dt.Rows[i][1]" asp-route-message="@Model.dt.Rows[i][3]">Delete</a><br>

                            </p>

                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
