<div class="Container">


    <table class="table table-striped center_Table" style="width:70%">
        <thead>
            <tr>

                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Subject</th>
                <th scope="col">Message</th>

            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.dt.Rows.Count; i++)
            {
                <tr>

                    @for (int j = 0; j < 4; j++)
                    {
